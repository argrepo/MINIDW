.virtualterminal-home-page .container {
	margin: 2px;
	padding: 2px;
	width:100% !important;
}

.virtualterminal-home-page .form-group.required .control-label:after {
  content:"*";
  color:red;
}

@media (max-width: 1350px) {
  .virtualterminal-home-page .scrollForTransactionsTable {
     margin-bottom: 15px;
    overflow-x: scroll;
    overflow-y: visible;
    border: 1px solid #dddddd;
    -ms-overflow-style: -ms-autohiding-scrollbar;
    -webkit-overflow-scrolling: touch;
  }
}

div.table{
	width: 100%;
margin-bottom: 20px;
margin-left: -40 px;
table-layout: fixed;
word-wrap: break-word;
overflow: hidden;
}
#printTable_Transaction tbody>tr>td {
	font-size: smaller;
    border-top: none;
    padding-top: 0;
    padding-bottom: 0;
}

.tansactionsTableHeaders{
	font-size: smaller;
	text-align: center;
}

table.dataTable thead > tr > th {
  padding-left: 5px;
  padding-right: 5px;
}

#resultTable_Transaction tbody>tr>td {
    padding-top: 0;
    padding-bottom: 0;
}
#duplicateCopy {
	page-break-before: always;
}
.facilityAddress{
	font-size: medium;
}

.for-nowrap{
	white-space: nowrap;
}
						